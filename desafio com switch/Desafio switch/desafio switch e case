#include <stdio.h>

int main() {
    int day;

    for (;;) {
        printf("Digite um némero de 1 a 7:");
        scanf("%d", &day);

        if (day != 1 && day != 2 && day != 3 && day != 4 && day != 5 && day != 6 && day != 7) {
            printf("Valor incorreto.\n");
        } else {
            break;
        }
    }

    switch (day) {
        case 1:
            printf("Domingo\n");
            break;
        case 2:
            printf("Segunda\n");
            break;
        case 3:
            printf("Terça\n");
            break;
        case 4:
            printf("Quarta\n");
            break;
        case 5:
            printf("Quinta\n");
            break;
        case 6:
            printf("Sexta\n");
            break;
        case 7:
            printf("Sábado\n");
            break;
    }

    return 0;
}
