#include <stdio.h>

int main() {
    char genero;
    float peso, altura;

    printf("Digite seu genero:\nm - Masculino\nf - Feminino\n");
    scanf("%s", &genero);

    switch(genero) {
        case 'm':
            printf("Digite sua altura (em metros): ");
            scanf("%f", &altura);
            peso = (72.7 * altura) - 58;
            printf("Seu peso ideal é: %2.f \n", peso);
            break;
        case 'f':
            printf("Digite sua altura (em metros): ");
            scanf("%f", &altura);
            peso = (62.1 * altura) - 44.7;
            printf("Seu peso ideal é: %2.f \n", peso);
            break;
        
    }

    return 0;
}
