#include <iostream>

int main() {
    float quantidade_maçãs, preço, valor_total;

    printf ("Digite o número de maçãs compradas: ");
    scanf ("%f", quantidade_maçãs);

    if (quantidade_maçãs<=12){
    preço = 0.30;
    }else{
    preço = 0.25;
    }

    valor_total = quantidade_maçãs * preço;
    
    printf ("O valor total da compra é: %.2f R$ \n", valor_total);

    return 0;
}
