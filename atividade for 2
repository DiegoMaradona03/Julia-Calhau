#include <stdio.h>
int main() {
    float nota;

    for (;;) {
        printf("Digite uma nota de 0 a 10: ");
        scanf("%f", &nota);

        if (nota >= 0 && nota <= 10) {
            printf("Nota válida: %.2f\n", nota);
            break;
        } else {
            printf("Valor inválido!\n");
        }
    }

    return 0;
}
