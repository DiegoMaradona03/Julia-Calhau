#include <iostream>

using namespace std;

int main() {
    // Declaração das variáveis
    int a, b, c;

    // Solicita ao usuário os três valores inteiros distintos
    printf ("Digite três valores inteiros distintos: ");
    scanf a, b, c;

    // Ordena os valores em ordem crescente usando a técnica de troca
    if (a > b) {
        int temp = a;
        a = b;
        b = temp;
    }
    if (a > c) {
        int temp = a;
        a = c;
        c = temp;
    }
    if (b > c) {
        int temp = b;
        b = c;
        c = temp;
    }

    // Exibe os valores em ordem crescente
    cout << "Os valores em ordem crescente são: " << a << " " << b << " " << c << endl;

    return 0;
}
